<div class="container  rounded mt-4 shadow-lg bg-dark p-4">
<h2 class="display-3 text-warning">Index page of events!</h2>

<table class="table table-dark table-bordered">
  <thead>
    <tr>
      <th scope="col" class="text-center">Event</th>
      <th scope="col" class="text-center">Hosted</th>
      <th scope="col" class="text-center">When</th>
      <th scope="col" class="text-center">Creator Id:</th>
    </tr>
  </thead>
  <tbody>
<h2 class="text-warning">Upcoming Events!</h2>


<% @events.upcoming_events.find_each do |e| %>

<tr class="text-center">
      <td><%= link_to e.title, event_path(e.id), class: "text-white " %></td>
      <td><%= e.creator.username %></td>
      <td> <%= e.date %></td>
      <td> <%= link_to e.creator.id, show_user_path(e.creator.id), class: "text-white "   %></td>
</tr>
<% end %>


</tbody>
</table>


<table class="table table-dark table-bordered">
  <thead>
    <tr>
      <th scope="col" class="text-center">Event</th>
      <th scope="col" class="text-center">Hosted</th>
      <th scope="col" class="text-center">When</th>
      <th scope="col" class="text-center">Creator Id:</th>
    </tr>
  </thead>
  <tbody>

<h2 class="text-warning">Past Events</h2>

<% @events.previous_events.find_each do |e| %>

<tr class="text-center">
      <td><%= link_to e.title, event_path(e.id), class: "text-white " %></td>
      <td><%= e.creator.username %></td>
      <td> <%= e.date %></td>
      <td> <%= link_to e.creator.id, show_user_path(e.creator.id), class: "text-white "  %></td>
</tr>

<% end %>

</tbody>
</table>

<%= will_paginate @events , class: "text-white text-center"%>


</div>
